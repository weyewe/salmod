<%= simple_form_for( new_object, :url => url,
      :method => :post , 
      :html => {:class => "form-horizontal prevent_double_submit ajax-form   no_content_form",
        :id => "new_object"}) do |f| %> 
			


  <%= f.input :name  , :input_html => {:class => "input-xlarge span5"}, 
  :label => "Nama" %>

	<%= f.input :mobile_phone  , :input_html => {:class => "input-xlarge span5"}, 
  :label => "Nomor Telpon" %>

	<%= f.input :address  , :input_html => {:class => "input-xlarge span5", :rows => '5'}, 
  :label => "Alamat" %>
 

  <div class="form-actions">
    <%= f.button :submit , :class => "btn btn-primary", :value=> "Create Employee" %>
  </div>
<% end %>