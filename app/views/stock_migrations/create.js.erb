$(document).ready(function(){
	
	// if category creation is successful, append that category
	// show growl notification 
	
	var $form = $('#new_object'); 
	$form.spin(false);
	
	

	 

	<% if @object.valid? %>
	 
		
		
		// refresh the search  
		$("#signin_search_item_id").tokenInput("clear");
		
		// remove the display table 
		$("#item_info").remove(); 
		$form.remove(); 
		
		<% item_info_table = escape_javascript(  render :partial => "stock_migrations/item_info_table", :locals => {
	    :item =>  @item
	  }) %>
		
		$.msgbox("<%= item_info_table  %>", 
					{type: "info"});
		
					
	<% else %>
	
		<% new_form = escape_javascript(  render :partial => "stock_migrations/new_object_form", :locals => {
	    :new_object => @new_object , 
			:url => stock_migrations_url ,
			:item_id => @item.id 
	  })%>
	
		$form.replaceWith('<%= new_form  %>');
	
		$.msgbox("Fail to create adjustment.", 
					{type: "error"});
	<% end %>
	
	// else, display error.. 
	jQuery('.prevent_double_submit').preventDoubleSubmit();
});