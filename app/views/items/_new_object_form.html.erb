<% if new_object.persisted? %>
	<% id = 'edit_object'%>
<% else %>
	<% id = 'new_object'%>
<% end %>



<%= simple_form_for( new_object, :url => url,
      :method => :post , 
      :html => {:class => "form-horizontal prevent_double_submit ajax-form   no_content_form",
        :id => "#{id}"}) do |f| %>

	<%#= f.input :parent_id , :label => "Super Category" %>
	
	<%= f.input :name  , :input_html => {:class => "input-xlarge "}, 
  :label => "Name" %>

	<%= f.input :category_id, :hint => "Item Category", :label => "Category" do %>
     <%= f.select :category_id, 
         Category.all_selectable_categories %>
  <% end %>

  
	<%= f.input :recommended_selling_price ,
				:label =>"Harga Jual",  
				:as => :string %>


	<% if not  new_object.persisted? %> 
		<hr />
		<%= f.input :initial_quantity ,
					:label =>"Kuantitas Awal",  
					:as => :string,
					:hint => "Hati-hati, tidak bisa di edit. Jika belum tahu, item ini jangan dibuat dulu." %>
		<%= f.input :initial_base_price ,
					:label =>"harga modal rata-rata untuk kuantitas awal (CoGS)",  
					:as => :string,
					:hint => "Hati-hati, tidak bisa di edit. Jika belum tahu, item ini jangan dibuat dulu." %>
	<% end %>

  <div class="form-actions">
		<% if new_object.persisted? %>
			<%= f.button :submit , :class => "btn btn-primary", :value=> "Update Item" %>
		<% else %>
			<%= f.button :submit , :class => "btn btn-primary", :value=> "Create Item" %>
		<% end %>
  </div>
<% end %>