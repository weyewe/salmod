
<%= simple_form_for( new_object, :url => url,
      :method => :post , 
      :html => {:class => " prevent_double_submit ajax-form",
        :id => "add_product_form"}) do |f| %> 
	<%=	 hidden_field_tag 'item_id', "#{item.id}" %> 

			<table class="table table-bordered table-striped table-highlight">
				<thead>
					<tr>
						<th style='text-align:center;'><%= item.name  %></th>  
					</tr>
				</thead>
				<tbody>
					<tr>
						<td> 
						  	<%= f.input :quantity,  
											:label => "Return Quantity" , :hint => "Purchased: #{sales_return.max_returnable_for(item)}. ", 
											:as => :string  %> 
						</td>
						
					</tr>
					<tr>
						<td> 
								<%= f.input :reimburse_price_per_piece ,
											:label =>"Harga Reimburse Satuan",  
											:hint => "Harga beli satuan: #{print_money( sales_return.sales_price_for(item) )}",
											:as => :string %>
			 
							
						</td>
					</tr>
					<tr>
						<td style='text-align:center;'><%= f.submit  "Return Produk", :class =>"btn" %></td>
					</tr>
				</tbody>
			</table> 
<% end %>