<%= render :partial => "layouts/masthead" ,:locals => {
	:title => "Categories Summary",
	:description => ""
}%>

<div id="content">

	<div class="container">
		
		
		<div class="row">
			
			<div class="span8">
				 
				
				<%= render :partial => "categories/new_object_form", :locals => {
					:new_object => @new_category , 
					:url => categories_url, 
				}%>

				
				
				<table class="table table-bordered table-striped table-highlight" id='tableview'>
					<thead>
						<tr>
							<th>Category Name</th>
							<th>Total Item</th> 
						</tr>
					</thead>
					<tbody>
						<% @categories.each do |category| %>
							<%= render :partial =>  'categories/entry', :locals => {
								:object => category 
							} %> 
						<% end %>
					</tbody>
				</table>

				
			</div> <!-- /.span8 -->
			
			
			<div class="span4">
				
				Search Category <hr />
				All Categories <hr /> 
		 
				
			</div> <!-- /.span4 -->
			
		</div> <!-- /.row -->
		
	
	</div> <!-- /.container -->

</div> <!-- /#content -->