	});
	
	$("#service_details_search_item_id").tokenInput("http://shell.loopj.com/tokeninput/tvshows.php", {
		prePopulate: [
		{id: 123, name: "Slurms MacKenzie"},
		{id: 555, name: "Bob Hoskins"},
		{id: 9000, name: "Kriss Akabusi"}
		],
		zindex: 9999
	});
	
	
	
});
</script>